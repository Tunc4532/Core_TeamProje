@using EntityLayer.Concreate
@model List<EkipTanitim>


<div class="col-md-4 stretch-card grid-margin">
    <div class="card">
        <div class="card-body">
            <p class="card-title mb-0">Ekip Tanıtım</p>
            <br /><br />
            <div class="table-responsive">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th class="pl-0  pb-2 border-bottom">#</th>
                            <th class="pl-0  pb-2 border-bottom">Görsel</th>
                            <th class="border-bottom pb-2">Ad Soyad</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="pl-0">@item.EkipTanitimID</td>
                                <td><img src="@item.ImageUrl" alt="user"></td>
                                <td class="text-muted">@item.Name</td>
                            </tr>
                        }
                       
                    </tbody>
                    <thead>
                        <tr>
                            <th class="pl-0  pb-2 border-bottom">#</th>
                            <th class="border-bottom pb-2">Unvan</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="pl-0">@item.EkipTanitimID</td>
                                <td class="text-muted">@item.Meslek</td>
                            </tr>
                        }

                    </tbody>
                   
                </table>
            </div>
        </div>
    </div>
</div>

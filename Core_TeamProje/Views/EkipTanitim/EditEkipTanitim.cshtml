@model EntityLayer.Concreate.EkipTanitim

@{
    ViewData["Title"] = "EditEkipTanitim";
    Layout = "~/Views/Shared/_AminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Ekip Arkadaşı Güncelleme Paneli</h3>
</div>
@using (Html.BeginForm("EditEkipTanitim", "EkipTanitim", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.EkipTanitimID)
    <br />
    @Html.Label("Ad Soyad")
    @Html.TextBoxFor(x=>x.Name , new {@class = "form-control"})
    <br />
    @Html.Label("Unvan ")
    @Html.TextBoxFor(x=>x.Meslek , new {@class = "form-control"})
    <br />
    @Html.Label("Görsel Url")
    @Html.TextBoxFor(x=>x.ImageUrl , new {@class = "form-control"})
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
}
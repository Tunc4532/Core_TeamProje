@model EntityLayer.Concreate.Portföy

@{
    ViewData["Title"] = "EditPortföy";
    Layout = "~/Views/Shared/_AminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Proje Güncelleme Paneli</h3>
</div>
@using (Html.BeginForm("EditPortföy", "Portföy", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.PortföyID)
    <br />
    @Html.Label("Proje Adı")
    @Html.TextBoxFor(x=>x.Name , new {@class = "form-control"})
    <br />
    @Html.Label("Image Url ")
    @Html.TextBoxFor(x=>x.ImageUrl , new {@class = "form-control"})
    <br />
    @Html.Label("Poject Url")
    @Html.TextBoxFor(x=>x.ProjectUrl , new {@class = "form-control"})
    <br />
    @Html.Label("Platform Url")
    @Html.TextBoxFor(x=>x.ImageUrlTwo , new {@class = "form-control"})
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
}
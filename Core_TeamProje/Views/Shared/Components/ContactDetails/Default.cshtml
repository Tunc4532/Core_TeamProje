@using EntityLayer.Concreate
@model List<Contact>

<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
    @foreach(var item in Model)
    {
    <div class="mt-3 px-2">
        <div class="h5">@item.Tittle</div>
        <p>@item.Description</p>
    </div>
    <div class="mt-5 px-2">
        <div class="row">
            <div class="col-sm-2">
                <div class="pb-1">Mail:</div>
            </div>
            <div class="col-sm-10">
                <div class="pb-1 fw-bolder">@item.Mail</div>
            </div>
            <div class="col-sm-2">
                <div class="pb-1">Skype:</div>
            </div>
            <div class="col-sm-10">
                <div class="pb-1 fw-bolder">username@skype.com</div>
            </div>
            <div class="col-sm-2">
                <div class="pb-1">Telefon:</div>
            </div>
            <div class="col-sm-10">
                <div class="pb-1 fw-bolder">@item.Phone</div>
            </div>
        </div>
    </div>
    }
</div>
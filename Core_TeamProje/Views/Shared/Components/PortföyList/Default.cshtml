@using EntityLayer.Concreate
@model List<Portföy>

<div class="section py-3 py-lg-5 px-2 px-lg-4" id="portfolio">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Projelerimiz </h2>
        </div>
        <div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
            <div class="grid-sizer"></div>
            @foreach(var item in Model)
            {
            <div class="grid-item">
                <a href="https://dribbble.com">
                    <figure class="portfolio-item">
                            <img src="@item.ImageUrl" data-bp="@item.ProjectUrl" />
                        <figcaption>
                            <h4 class="h5 mb-0">@item.Name</h4>
                            <div>@item.ImageUrlTwo</div>
                        </figcaption>
                    </figure>
                </a>
            </div>
            }
        </div>
    </div>
</div>
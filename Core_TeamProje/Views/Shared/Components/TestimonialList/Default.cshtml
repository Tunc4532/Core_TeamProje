@using EntityLayer.Concreate
@model List<Testimonial>

<div class="section py-3 py-lg-5 px-2 px-lg-4" id="testimonials">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Müşteri Görüşleri</h2>
        </div>
        <div class="row">
            @foreach(var item in Model)
            {
            <div class="col-md-6 mb-5" data-aos="fade-right" data-aos-delay="100">
                <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@item.Comment</span></div>
                <div class="d-flex justify-content-end align-items-end">
                    <div class="text-end me-2">
                        <div class="fw-bolder">@item.ClientName</div>
                        <div class="text-small">@item.Company / @item.Tittle</div>
                    </div><img class="me-md-3 rounded" src="@item.ImageUrl" width="96" height="96" alt="client 1" />
                </div>
            </div>
            }
        </div>
    </div>
</div>
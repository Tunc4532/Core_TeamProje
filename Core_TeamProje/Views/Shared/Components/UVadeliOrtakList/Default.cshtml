@using EntityLayer.Concreate
@model List<UVadeliOrtak>

<div class="row py-3 py-lg-5">
    @foreach (var item in Model)
    {
    <div class="col-lg-6 col-md-5 px-3 order-md-last" data-aos="fade-zoom-in" data-aos-delay="50" data-aos-easing="ease-in-back"><img class="my-3 img-fluid" src="@item.ImageUrl" alt="work-chat" /></div>
    <div class="col-lg-6 col-md-7 px-2" data-aos="zoom-in" data-aos-delay="100">
        <div class="h3 mb-2">@item.Header</div>
        <p class="text-secondary mb-3">@item.Description</p>
        
        <ul class="nav nav-tabs nav-fill" role="tablist">
            <li class="nav-item" role="presentation"><a class="nav-link p-1 active" aria-current="page" href="#@item.ImageUrl" data-bs-toggle="tab"><span class="badge bg-secondary me-1"></span> @item.BaslıkAd</a></li>
        </ul>
        <div class="tab-content border border-top-0 text-secondary p-3" id="myTabContent">
            <div class="tab-pane fade show active" id="experience" role="tabpanel" aria-labelledby="home-tab">
                <p>@item.BaslıkAciklama.</p><a class="fw-bold text-decoration-none"></a>
            </div>
        </div>
        
    </div>
    }
</div>
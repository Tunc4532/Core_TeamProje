@model EntityLayer.Concreate.UVadeliOrtak

@{
    ViewData["Title"] = "IndexUv";
    Layout = "~/Views/Shared/_AminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">U.Vadeli Ortaklık Güncelleme Paneli</h3>
</div>
@using (Html.BeginForm("IndexUv", "UVadeliOrtak", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.UVadeliOrtakID)
    <br />
    @Html.Label("Ana Başlık")
    @Html.TextBoxFor(x=>x.Header , new {@class = "form-control"})
    <br />
    @Html.Label("Görsel Url ")
    @Html.TextBoxFor(x=>x.ImageUrl , new {@class = "form-control"})
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x=>x.Description ,6,3, new {@class = "form-control"})
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x=>x.BaslıkAd , new {@class = "form-control"})
    <br />
    @Html.Label("Başlık Açıklama")
    @Html.TextAreaFor(x=>x.BaslıkAciklama ,6,3, new {@class = "form-control"})
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
}
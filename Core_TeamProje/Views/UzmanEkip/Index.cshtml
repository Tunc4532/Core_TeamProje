@using EntityLayer.Concreate
@model List<UzmanEkip>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Uzman Ekip Hizmet Paneli</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="status">Oran</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Güncelle</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach(var item in Model)
            {
            <tr>
                <th scope="row">
                    <div class="media align-items-center">
                        <a href="#" class="avatar rounded-circle mr-3">
                            <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/bootstrap.jpg">
                        </a>
                    </div>
                </th>
                <th>@item.Tittle</th>
                <td>
                    <div class="d-flex align-items-center">
                        <span class="completion mr-2">@item.Value%</span>
                        <div>
                            <div class="progress">
                                <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                            </div>
                        </div>
                    </div>
                </td>
                    <td><a href="/UzmanEkip/DeleteUzmanEkip/@item.UzmanEkipID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/UzmanEkip/EditUzmanEkip/@item.UzmanEkipID" class="btn btn-info">Güncelle</a></td>
            </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/UzmanEkip/AddUzmanEkip/" class="btn btn-primary">Yeni Değer Gir</a>
</div>
